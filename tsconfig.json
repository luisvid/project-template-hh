{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./scripts",
    "./test",
    "./deploy",
    "./typechain-types"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
